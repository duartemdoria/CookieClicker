<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookieClicker.MainPage"
             xmlns:local="clr-namespace:CookieClicker.ViewModels">

    <ContentPage.BindingContext>
        <local:CookieClickerViewModel />
    </ContentPage.BindingContext>

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20,50" Spacing="40">

        <!-- Enlarged Cookie Button -->
        <Button x:Name="CookieButton"
                Clicked="CookieButton_Clicked"
                BackgroundColor="Transparent"
                ImageSource="cookie.png"
                WidthRequest="250"
                HeightRequest="250"
                BorderWidth="2"
                CornerRadius="125" />
        <!-- Rounded corners for a circular look -->

        <!-- Larger Cookie Count Label -->
        <Label Text="{Binding CookieCount}"
               FontSize="48"
               TextColor="DarkGoldenrod"
               HorizontalOptions="Center"
               Margin="0,20,0,0"
               FontAttributes="Bold" />
        <!-- Bold for emphasis -->

        <!-- Larger Upgrade Button -->
        <Button x:Name="UpgradeBtn"
                Text="Comprar Avó (10 cookies)"
                FontSize="24"
                BackgroundColor="Goldenrod"
                TextColor="White"
                Padding="15,10"
                CornerRadius="10"
                SemanticProperties.Hint="Increases click power"
                HorizontalOptions="Fill"
                HeightRequest="60"
                Clicked="BuyAvoButton_Clicked"
                IsEnabled="{Binding CanBuyAvo}" />

    </StackLayout>

</ContentPage>
